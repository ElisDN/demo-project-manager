{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <div class="d-flex mb-3 controls">
        <a href="{{ path('post_index') }}" class="btn btn-primary">Back to list</a>
        <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-primary">Edit</a>
        {{ include('post/_delete_form.html.twig') }}
    </div>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ post.text }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
